
<div class="mx-auto md:w-2/3 w-full flex-col">
  <div class="box pb-8 mx-0">
    <h1 class='text-4xl'>Tasting session</h1>
  </div>
  <div class="w-full px-3">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <% if @taste_session.samples.count > 0 %>
      <div class=' mx-0 flex flex-col'>
        <%= render partial: 'sample', collection: @taste_session.samples %>
      </div>
    <% else %>
      <p>You're early! This session isn't ready to go yet...</p>
    <% end %>
  </div>
</div>
